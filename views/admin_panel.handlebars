
<html>
<head>
    <style>
        body        { padding-top:80px; }
    </style>
    <title>Users Authentication</title>
</head>
<body>
<div class="container">
	<h1 class="text-center">Admininstrator Panel</h1>

	{{#if administrator}}
		<table class="table table-bordered">
			<thead>
				<tr>
					<!---th class="col-lg-4">Username</th><th class="col-lg-4">Admin</th><th class="col-lg-4">Locked</th-->
				</tr>
			</thead>
			<tbody>
				{{#data}}
					<form action="/admin_panel/{{username}}" method="POST">
						<tr>
							<td>
								<input type="text" class="col-lg-12" name="username" value="{{username}}" readonly>
							</td>

							<td>
								<select name="admin">
									{{#if admin}}
										<option value="{{admin}}">Admin</option>
										<option value="0">Not Admin</option>
									{{else}}
										<option value="{{admin}}">Not Admin</option>
										<option value="1">Admin</option>
									{{/if}}
								</select>
							</td>
							<td>
								<select name="locked">
									{{#if locked}}
										<option value="{{locked}}">Locked</option>
										<option value="0">Not Locked</option>
									{{else}}
										<option value="{{locked}}">Not Locked</option>
										<option value="1">Locked</option>
									{{/if}}
								</select>
							</td>
							<td>
								<input type="submit" class="btn btn-default">
							</td>
						</tr>
				</form>
				{{/data}}
			</tbody>
		</table>
	{{else}}
		<h1>YOU HAVE TO BE ADMIN</h1>
	{{/if}}
</div>
</body>
</html>